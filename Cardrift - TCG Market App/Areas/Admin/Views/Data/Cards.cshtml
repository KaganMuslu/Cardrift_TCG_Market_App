@model List<Card>

<br>

@* Search Bar *@
<div class="row row-card text-center">
    <form asp-controller="data" asp-action="cards">
        <div class="d-flex align-items-center" style="gap: 10px; width: 100%;">
            <div>
                <a asp-controller="data" asp-action="cards" class="btn btn-primary">
                    <span class="btn-label">
                        <i class="fa fa-home"></i>
                    </span>
                    Home
                </a>
            </div>
            <nav class="navbar navbar-header-left navbar-expand-lg navbar-form nav-search p-0 d-none d-lg-flex" style="flex: 1;">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <button type="submit" class="btn btn-search pe-1" style="background-color: #FFFFFF !important; z-index:inherit">
                            <i class="fa fa-search search-icon"></i>
                        </button>
                    </div>
                    <input type="text"
                           name="searchTerm"
                           placeholder="Card Search..."
                           class="form-control text-center"
                           style="background-color: #FFFFFF !important;" />
                </div>
            </nav>
            <div>
                <a asp-controller="data" asp-action="addcard" class="btn btn-secondary">
                    <span class="btn-label">
                        <i class="fa fa-plus"></i>
                    </span>
                    Add Card
                </a>
            </div>
        </div>
    </form>
</div>

<br>


<div class="row row-card text-center">
    @if (Model.Count != 0)
    {
        @foreach (var card in Model)
        {
            <div class="col-md-6 d-flex align-items-stretch">
                <div class="card card-post card-round d-flex flex-row align-items-center w-100">
                    @if (card.ImageUrl != null)
                    {
                        <div class="zoom">
                            <img src="@card.ImageUrl"
                                 alt="@card.Name image cap"
                                 class="card-img-left"
                                 style="width: 200px; height: auto; max-height: 200px; object-fit: contain; border-radius: 10px;" />
                        </div>
                    }
                    else
                    {
                        <img src="https://lykrepair.com/wp-content/uploads/2021/07/no-image.png"
                             alt="@card.Name image cap"
                             class="card-img-left"
                             style="width: 200px; height: auto; max-height: 200px; object-fit: contain; border-radius: 10px;" />
                    }

                    <div class="card-body d-flex flex-column justify-content-between h-100" style="flex: 1; display: flex;">
                        <h3 class="card-title">
                            <a href="#"> @card.Name </a>
                        </h3>
                        <div>
                            <div class="title" style="font-weight:bold">@card.Set?.Name</div>
                            <div class="title" style="font-weight:bold">@card.Rarity</div>
                        </div>
                        <div class="row user-stats text-center">
                            <div class="col">
                                <div class="title">Price</div>
                                <div class="number">56</div>
                            </div>
                            <div class="col">
                                <div class="title">Stock</div>
                                <div class="number">@card.StockQuantity</div>
                            </div>
                        </div>
                        <div class="row user-stats text-center mt-2">
                            <div class="col">
                                <a href="#" class="btn btn-black btn-rounded btn-sm">Go Cards</a>
                            </div>
                            <div class="col">
                                <form asp-area="admin" asp-controller="data" asp-action="editcard" method="get">
                                    <button type="submit" class="btn btn-secondary btn-rounded btn-sm">Edit Card</button>
                                    <input type="hidden" name="id" value="@card.Id" />
                                </form>
                            </div>
                            <div class="col">
                                <form asp-area="admin" asp-controller="data" asp-action="deletecard" method="post">
                                    <button type="submit" class="btn btn-danger btn-rounded btn-sm">Delete!</button>
                                    <input type="hidden" name="id" value="@card.Id" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    }
    else
    {
        <div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
            <div class="text-center">
                <h2 class="text-danger">No data found!</h2>
            </div>
        </div>
    }

</div>

<br />

<div class="card-body">
    <ul class="pagination pg-primary justify-content-center">


        @if (ViewBag.page == 1)
        {
            <li class="page-item">
                <a class="page-link" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>

            <li class="page-item active">
                <a class="page-link" asp-controller="data" asp-action="cards" asp-route-page=@ViewBag.page>1</a>
            </li>
            @if (ViewBag.next == true)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="data" asp-action="cards" asp-route-page=@(ViewBag.page+1)>2</a>
                </li>
            }
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-controller="data" asp-action="cards" asp-route-page=@(ViewBag.page-1) aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>

            <li class="page-item">
                <a class="page-link" asp-controller="data" asp-action="cards" asp-route-page=@(ViewBag.page-1)>@(ViewBag.page - 1)</a>
            </li>
            <li class="page-item active">
                <a class="page-link" asp-controller="data" asp-action="cards" asp-route-page=@ViewBag.page>@ViewBag.page</a>
            </li>
            @if (ViewBag.next == true)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="data" asp-action="cards" asp-route-page=@(ViewBag.page+1)>@(ViewBag.page + 1)</a>
                </li>
            }
        }

        @if (ViewBag.next == true)
        {
            <li class="page-item">
                <a class="page-link" asp-controller="data" asp-action="cards" asp-route-page=@(ViewBag.page+1) aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }

    </ul>
</div>